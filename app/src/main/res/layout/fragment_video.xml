<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:id="@+id/Genlayout">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="15dp"
        android:paddingTop="20dp"
        android:text="Utente generico:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:text="Carica video" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewGen"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/Genlayout"
        android:layout_marginTop="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/Donnalayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@id/scrollViewGen">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollViewGen"
            android:padding="15dp"
            android:paddingTop="20dp"
            android:text="Utente donna:"
            android:textSize="16dp" />

        <Button
            android:id="@+id/uploadButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollViewGen"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Carica video" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewDonna"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_below="@id/Donnalayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDonna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </ScrollView>


</RelativeLayout>
